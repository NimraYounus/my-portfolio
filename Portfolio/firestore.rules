rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /projectReactions/{projectId} {
      allow read: if true;
      allow write: if false;
    }

    match /projectReactions/{projectId}/devices/{deviceId} {
      allow read: if true;
      allow create, update: if request.time != null;
      allow delete: if false;
    }

    match /contactMessages/{messageId} {
      allow read: if false;
      allow create: if request.resource.data.name is string
        && request.resource.data.email is string
        && request.resource.data.company is string
        && request.resource.data.message is string
        && (request.resource.data.createdAt is timestamp || request.resource.data.createdAt == request.time);
      allow update, delete: if false;
    }

    match /notificationTokens/{deviceId} {
      allow read: if false;
      allow create, update: if request.resource.data.token is string
        && (request.resource.data.updatedAt is timestamp || request.resource.data.updatedAt == request.time);
      allow delete: if false;
    }
  }
}
